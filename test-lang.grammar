
version: 2022-05-13

*
optional loop
	[function declaration]
(EOF)
x

------------------------------------------------------------------

[function declaration]=
("proc")
(IDENTIFIER)
("(")
optional 'parameter'
	("var")
	(IDENTIFIER)
(")")
("{")
optional loop
	[statement]
("}")
	
------------------------------------------------------------------

[variable declaration]=
	("var")
	(IDENTIFIER)
	("=")
	[expression]

------------------------------------------------------------------

[statement]=
case 'single'
	case 'declaration'
		[variable declaration]
	or 'assignment'
		(IDENTIFIER)
		("=")
		[expression]
	or 'call'
		(IDENTIFIER)
		("(")
		optional 'arg'
			[expression]
		(")")
	(";")
or 'while'
	("while")
	("(")
	[expression]
	(")")
	("{")
	optional loop
		[statement]
	("}")
or 'if'
	("if")
	("(")
	[expression]
	(")")
	("{")
	optional loop
		[statement]
	("}")
	optional
		("else")
		("{")
		optional loop
			[statement]
		("}")

------------------------------------------------------------------

[expression]=
case 'literal'
	(LITERAL)
or 'variable'
	(VARIABLE)
or
	[binary operator]
or 'parenthesis'
	("(")
	[expression]
	(")")
	
-------------------------------------------------------------------

[binary operator]=
[expression]
case
	("<")
or
	("+")
or
	("-")
or
	("*")
or
	("/")
[expression]
